{
    "AWSEBDockerrunVersion": 2,
    "containerDifinitions": [
        {
            "name": "client",
            "image": "bigdatawonders/multi-client",
            "hostname": "client",
            "essential": false,
            "memory": 128
        },
        {
            "name": "server",
            "image": "bigdatawonders/multi-server",
            "hostname": "api",
            "essential": false,
            "memory": 128
        },
        {
            "name": "worker",
            "image": "bigdatawonders/multi-worker",
            "hostname": "worker",
            "essential": false,
            "memory": 128
        },
        {
            "name": "nginx",
            "image": "bigdatawonders/multi-nginx",
            "essential": true,
            "portMapping": [
               {
                   "hostPort": 80,
                   "containerPort": 80
               }
            ],
            "links": ["client", "server"],
            "memory": 128
        }
    ]
}